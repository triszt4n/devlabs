<%- include('includes/header') %>
<%- include('includes/navbar', {needFull: true}) %>

<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h2 style="margin: 1em 0 1em 0;">View Developer</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <span class="h2">
                <%= name %>
            </span>
        </div>
        <div style="margin-left: 20px; margin-top: 10px;" class="col-12">
            <ion-icon name="at-outline"></ion-icon>&nbsp;<%= email %>
        </div>
        <div style="margin-left: 20px;" class="col-12">
            <ion-icon name="call-outline"></ion-icon>&nbsp;<%= phone %>
        </div>
    </div>
    <div style="margin: 40px 0 10px 0;" class="row">
        <div class="col-12">
            Memberships:
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th class="text-center" scope="col">#</th>
                <th scope="col">Project</th>
                <th class="d-none d-lg-block" scope="col">Leader</th>
                <th class="text-right" scope="col">Joined on</th>
                <th class="text-right" scope="col"> </th>
            </tr>
        </thead>
        <tbody>
            <% memberships.forEach( function(membership, index) { %>
            <tr>
                <th class="text-center" scope="row"><%= memberships.length - index %></th>
                <td><%= membership.title %></td>
                <td class="d-none d-lg-block"><%= membership.leaderName %></td>
                <td class="text-right"><%= membership.addedDate %></td>
                <td class="text-right">
                    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"></button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
                        <a href="/projects/<%= membership.projID %>" class="dropdown-item">
                            <ion-icon name="search-outline"></ion-icon>&nbsp;View Project
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="/projects/kick/<%= membership.memshipID %>" class="dropdown-item">
                            <ion-icon name="walk-outline"></ion-icon>&nbsp;Quit Project
                        </a>
                    </div>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <div class="row">
        <div class="col-12">
            <a href="javascript:history.back()" class="btn btn-danger">
                <ion-icon name="arrow-back-outline"></ion-icon>&nbsp;Back
            </a>
        </div>
    </div>
</div>

<%- include('includes/footer') %>