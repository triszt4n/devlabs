<%- include('includes/header') %>
<%- include('includes/navbar', {needFull: true}) %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h4 class="my-5">
                Edit Profile
            </h4>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form method="POST">
                <%- include('includes/message', {message: message, messageColor: messageColor}) %>
                <div class="form-group">
                    <label for="email">Email address*</label>
                    <input type="text" class="form-control" id="email" name="email" value="<%= typeof dev.email !== 'undefined'? dev.email : '' %>">
                    <small id="email" class="form-text text-muted">
                        *required
                    </small>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= typeof dev.name !== 'undefined'? dev.name : '' %>">
                </div>
                <div class="form-group">
                    <label for="phone">Phone number</label>
                    <input type="text" class="form-control" id="phone" name="phone" value="<%= typeof dev.phone !== 'undefined'? dev.phone : '' %>">
                </div> 
                <div class="form-group">
                    <label for="githubUsername">Github username</label>
                    <input type="text" class="form-control" id="githubUsername" name="githubUsername" value="<%= typeof dev.githubUsername !== 'undefined'? dev.githubUsername : '' %>">
                </div>
                <div class="mt-4">
                    <button type="submit" style="float: right;" class="btn btn-success">
                        <ion-icon name="checkmark-outline"></ion-icon>&nbsp;Save
                    </button>
                    <a href="javascript:history.back()" class="btn btn-danger">
                        <ion-icon name="arrow-back-outline"></ion-icon>&nbsp;Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('includes/footer') %>