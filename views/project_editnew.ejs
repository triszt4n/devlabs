<%- include('includes/header', {needDateTime: true}) %>
<%- include('includes/navbar', {needFull: true}) %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h4 style="margin: 1em 0 0.5em 0;">
                <%= (title !== "")?"Edit Sprint":"New Sprint"%>
            </h4>
        </div>
    </div>

    <form method="POST">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= title %>">
        </div>
        <div class="form-group">
            <label for="reward">Reward:</label>
            <input type="number" class="form-control" id="reward" name="reward" value="<%= reward %>">
        </div>
        <div class="form-group">
            <label for="desc">Description:</label>
            <textarea class="form-control" id="desc" name="desc" rows="3"><%= desc %></textarea>
        </div>

        <div class="row">
            <%# Input of startDate #%>
            <div class="form-group col-lg-6" style="margin-top: 32.5px;">
                <label for="startDate">Starting date:</label>
                <input type="text" class="form-control" id="startDate" name="startDate" value="<%= startDate %>" />
            </div>

            <%# Complicated thingy %>
            <div class="form-group col-lg-6">
                <%# First checkbox %>
                <div class="form-check" style="margin-bottom: 10px;">
                    <input type="checkbox" class="magic-checkbox" id="isEnded" name="isEnded"
                        <%= isEnded?"checked":"" %>>
                    <label class="form-check-label" for="isEnded">Declare date of ending</label>
                </div>
                <%# div for jQuery %>
                <div id='enddateOption' style='<%= isEnded?"":"display:none;" %> margin-bottom: 10px;'>
                    <label for="endDate">Ending date:</label>
                    <%# input of endDate %> 
                    <input <%= isEnded?"":"disabled='disabled'" %> type="text" class="form-control" id="endDate"
                        name="endDate" value="<%= endDate %>">
                    <%# Second checkbox %> 
                    <div class="form-check" style="margin-top: 10px;">
                        <input <%= isEnded?"":"disabled='disabled'" %> type="checkbox" class="magic-checkbox"
                            id="isSuccess" name="isSuccess" <%= isSuccess?"checked":"" %>>
                        <label class="form-check-label" for="isSuccess">Declare as successful Project</label>
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" style="float: right;" class="btn btn-success">
            <ion-icon name="checkmark-outline"></ion-icon>&nbsp;Save
        </button>
        <a href="javascript:history.back()" class="btn btn-danger">
            <ion-icon name="arrow-back-outline"></ion-icon>&nbsp;Back
        </a>
    </form>
</div>

<%- include('includes/footer', {needDateTime: true}) %>