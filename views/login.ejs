<%- include('includes/header') %>
<%- include('includes/navbar', {needFull: false}) %>

<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h2 style="margin: 1em 0 0.5em 0;">Welcome</h2>
            <img src="/img/devlabs-icon.svg" style="height: 6em; margin: 0 0 1em 0;">              
            <p>Enter your email address and password</p>
            <% if (typeof message !== 'undefined') { %>
                <p style="color: red;">
                    <%= message %>
                </p>
            <% } %>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form method="POST">
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input class="form-control" type="text" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="pw">Password:</label>
                    <input class="form-control" type="password" id="pw" name="pw">
                    <a href="/forgotten">Forgot your password?</a>
                </div>
                <div style="margin-top: 20px;">
                    <button type="submit" class="btn btn-primary">
                        <ion-icon name="log-in-outline"></ion-icon>&nbsp;Log in
                    </button>
                    <a class="btn btn-primary" style="float: right;" href="/register">
                        <ion-icon name="person-add-outline"></ion-icon>&nbsp;Register
                    </a>
                </div>
            </form method="POST">
        </div>
    </div>
</div>

<%- include('includes/footer') %>