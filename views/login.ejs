<%- include('includes/header') %>
<%- include('includes/navbar', {needFull: false}) %>

<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="my-5">Welcome</h2>
            <img src="/img/devlabs-icon.svg" style="height: 6em;" class="mb-3">              
            <p>Enter your email address and password</p>

            <%- include('includes/message', {message: message, messageColor: messageColor}) %>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form method="POST">
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input class="form-control" type="text" id="email" name="email">
                    <a href="/register">Not a member yet? Register here.</a>
                </div>
                <div class="form-group">
                    <label for="pw">Password:</label>
                    <input class="form-control" type="password" id="pw" name="pw">
                    <a href="/forgotten">Forgot your password?</a>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary" style="float: right;">
                        <ion-icon name="log-in-outline"></ion-icon>&nbsp;Log in
                    </button>
                </div>
            </form method="POST">
        </div>
    </div>
</div>

<%- include('includes/footer') %>