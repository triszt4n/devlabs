<%- include('includes/header') %>
<%- include('includes/navbar', {needFull: true}) %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h4 style="margin: 1em 0 0.5em 0;">
                Change password
            </h4>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form method="POST">
                <% if (typeof message !== 'undefined') { %>
                    <p style="color: red;">
                        <%= message %>
                    </p>
                <% } %>
                <div class="form-group">
                    <label for="oldpw">Current password:</label>
                    <input type="password" class="form-control" id="oldpw" name="oldpw">
                </div>
                <div class="form-group">
                    <label for="newpw1">New password:</label>
                    <input type="password" class="form-control" id="newpw1" name="newpw1">
                </div>
                <div class="form-group">
                    <label for="newpw2">Confirm new password:</label>
                    <input type="password" class="form-control" id="newpw2" name="newpw2">
                </div>
                <button type="submit" style="float: right;" class="btn btn-success">
                    <ion-icon name="checkmark-outline"></ion-icon>&nbsp;Save
                </button>
                <a href="javascript:history.back()" class="btn btn-danger">
                    <ion-icon name="arrow-back-outline"></ion-icon>&nbsp;Back
                </a>
            </form>
        </div>
    </div>
</div>

<%- include('includes/footer') %>